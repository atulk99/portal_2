<h1>Bookings</h1>
<div>
	<body class="bg_for_all_pages"></body>

	
	 <table class="table">
	 	<thead>
  		 <tr>
  		  	<th>Start Date</th>
  		  	<th>End Date</th>
  		  	<th>Price</th>
  		  	<th>Show</th>
  		 </tr>
  		</thead>
  		<tbody>
  		 <% @bookings.each do |booking|%>
  		 <tr>
   		 	<td><%= booking.start %></td>
			<td><%= booking.end %></td>
			<td><%= booking.price %></td>
			<td><%= link_to "Show this booking", booking_path(booking.id)%></td>
			

  		 </tr>
  		 <%end%>
  		</tbody>
	 </table>
	 <br>
		
</div>



<div>
	<%= link_to "Show Past Bookings", pastbookings_path%>
	<br>
	<%= link_to "Show Future Bookings", futurebookings_path%>
</div>

